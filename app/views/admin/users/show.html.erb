<div class="user-show1">
  <table class = "user-show" >
    <h3 class = "marker">ユーザー情報</h3>
      <tr>
        <td>ユーザー名</td>
        <td><h5 class="user-name"><%= @user.name %></h5></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><h5 class="email"><%= @user.email %></h5></td>
      </tr>
  </table>
  
  <% if @user.admin_flag.present?  %>
  <table class = "shop-show" >
    <h3 class = "marker">登録店舗情報</h3>
      <tr>
        <td>店舗名</td>
        <td><h4 class="shop-name"><%= @shop.shop_name %></h4></td>
      </tr>
      <tr>
        <td>店舗住所</td>
        <td><h4 class="shop-address"><%= @shop.address %></h4></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><h4 class="shop-tel"><%= @shop.tel %></h4></td>
      </tr>
      <tr>
        <td>店舗メールアドレス</td>
        <td><h4 class="shop-admin-email"><%= @shop.admin_email %></h4></td>
      </tr>
      <tr>
        <td>店舗URL</td>
        <td><h4 class="shop-url"><%= @shop.url %></h4></td>
      </tr>
      <tr>
        <td>営業時間</td>
        <td><h4 class="shop-hours"><%= @shop.hours %></h4></td>
      </tr>
      <tr>
        <td>休業日</td>
        <td><h4 class="shop-holiday"><%= @shop.holiday %></h4></td>
      </tr>
  </table>
  <% end %>
</div>
<%= link_to 'ユーザー一覧へ戻る', admin_users_path, class:"btn btn-secondary" %>
<%= link_to 'HOME画面に戻る', root_path, class:"btn btn-secondary" %>
