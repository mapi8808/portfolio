<h2 class = "marker">ユーザー情報編集</h2>

<% if @user.errors.any? %>
  <h4><%= @user.errors.count %>件のエラーが発生しました</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
<% end %>

<%= form_with model:@user, local:true do |f| %>
<h4 class="user-name">ユーザー名</h4>
<%= f.text_field :name %>
<h4 class="email">メールアドレス</h4>
<%= f.text_field :email %>

<div>
<%= f.submit '変更を保存' %>
</div>
<% end %>