<div class="user-show1">
  <table class = "user-show" >
    <h3 class = "marker">ユーザー情報</h3>
    <% if flash[:update] %>
      <div class="flash">
        <%= flash[:update] %>
      </div>
    <% end %>
      <tr>
        <td>ユーザー名</td>
        <td><h5 class="user-name"><%= @user.name %></h5></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><h5 class="email"><%= @user.email %></h5></td>
      </tr>
  </table>

  <div>
    <%= link_to "ユーザー情報編集", edit_user_path(current_user.id), class: "btn btn-primary" %>
  </div>

  <!--新規登録で店舗管理者（admin_flag）にチェックを入れていたら店舗情報表示-->
  <% if current_user.admin_flag %>
  <table class = "shop-show" >
    <h3 class = "marker">登録店舗情報</h3>

    <% if flash[:shopup] %>
      <div class="flash">
        <%= flash[:shopup] %>
      </div>
    <% end %>
      <tr>
        <td>店舗名</td>
        <td><h4 class="shop-name"><%= @shop.shop_name %></h4></td>
      </tr>
      <tr>
        <td>店舗住所</td>
        <td><h4 class="shop-address"><%= @shop.address %></h4></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><h4 class="shop-tel"><%= @shop.tel %></h4></td>
      </tr>
      <tr>
        <td>店舗メールアドレス</td>
        <td><h4 class="shop-admin-email"><%= @shop.admin_email %></h4></td>
      </tr>
      <% if @shop.url.present? %>
      <tr>
        <td>店舗URL</td>
        <td><h4 class="shop-url"><%= link_to 'リンク先', @shop.url %></h4></td>
      </tr>
      <% end %>
      <tr>
        <td>営業時間</td>
        <td><h4 class="shop-hours"><%= @shop.hours %></h4></td>
      </tr>
      <tr>
        <td>休業日</td>
        <td><h4 class="shop-holiday"><%= @shop.holiday %></h4></td>
      </tr>
  </table>
  <div>
    <%= link_to "店舗情報編集", edit_shop_path(@shop.id), class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
