<h2 class = "marker">店舗情報編集</h2>
<% if @shop.errors.any? %>
  <h4><%= @shop.errors.count %>件のエラーが発生しました</h4>
    <ul>
      <% @shop.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model:@shop, url: shop_path, local:true do |f| %>

<h4 class="shop-name">店舗名</h4>
<%= f.text_field :shop_name %>

<h4 class="shop-address">店舗住所</h4>
<%= f.text_area :address %>

<h4 class="tel">電話番号</h4>
<%= f.text_field :tel %>

<h4 class="shop-admin-email">店舗メールアドレス</h4>
<%= f.text_field :admin_email %>

<h4 class="shop-url">店舗URL</h4>
<%= f.text_field :url %>

<h4 class="shop-hours">営業時間</h4>
<%= f.text_field :hours %>

<h4 class="shop-holiday">休業日</h4>
<%= f.text_field :holiday %>

<div>
<%= f.submit '変更を保存' %>
</div>
<% end %>