<h2>店舗情報編集</h2>
<%= form_with model:@shop, url: shop_path, local:true, method: :patch do |f| %>
<h4 class="shop-name">店舗名</h4>
<%= f.text_field :shop_name %>

<h4 class="shop-address">店舗住所</h4>
<%= f.text_area :address %>

<h4 class="tel">電話番号</h4>
<%= f.text_field :tel %>

<h4 class="shop-admin-email">店舗管理者のメールアドレス</h4>
<%= f.text_field :admin_email %>

<h4 class="shop-url">店舗URL</h4>
<%= f.text_field :url %>

<h4 class="shop-hours">営業時間</h4>
<%= f.text_field :hours %>

<h4 class="shop-holiday">休業日</h4>
<%= f.text_field :holiday %>

<h4 class="shop-password">ショップパスワード</h4>
<%= f.text_field :shop_password %>

<%= f.submit '変更を保存' %>
<% end %>