<% if @shop_or_product == "1" %>　<!--店舗を選んだ場合-->
<h1>"店舗"の検索結果です</h1>
  <div class='row'>
    <% @shops.each do |shop| %> <!--店舗登録情報の結果反映-->
      <div class="col-md-6">
        <table class="table">
          <!--<div class="search"> -->
            <thead>
              <tr>
                <td><h3 class="shop-name"><%= shop.shop_name %></h3></td>
                <td><%= link_to '店舗詳細へ', shop_path(shop.id), class:"show_#{shop.id}", class:"btn btn-success" %></td>
              </tr>
            </thead>
          <!--</div>-->
        </table>
      </div>
    <% end %> <!--店舗登録情報終了-->
  </div>    

<% else @shop_or_product == "2" %> <!--商品を選んだ場合-->
<h2>"商品"の検索結果です</h2>
  <div class='row'>
    <% @products.each do |product| %> <!--商品登録情報の結果反映-->
    <% shop = product.shop %> <!--shopは商品を登録した店舗-->
      <div class="col-md-6">
        <div class="search"> 
          <table class="table">
            <thead>
              <tr>
                <td>
                  <%= link_to product_path(product) do %>
                    <%= attachment_image_tag product, :image, :fill, 130, 130, format: 'jpeg' %>
                  <% end %>
                </td>
                <td>
                  <h5 class="shop-name">店舗名：<%= shop.shop_name %></h5>
                  <h5 class="product-name">商品名：<%= link_to product.product_name, product_path(product) %></h5>
                  <h6 class="product-body">商品説明：<%= product.body %></h6>
                  <h5 class="product-price">価格：<%= product.amounts %>円(税抜き)</h5>
                </td>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    <% end %> <!--商品登録情報終了-->
  </div>
<% end %>