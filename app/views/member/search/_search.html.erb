<!--商品と店舗機能の部分テンプレート-->
<%= form_with url: search_search_path, method: :get, local: true do |f| %>
  <table>
    <tr>
      <td>
        <%= f.text_field :search %>
      </td>
      <td>
        <% if admin_signed_in? %>
          <%= select_tag(:option, options_for_select([["店舗", "1"],["商品","2"],["ユーザー","3"]]))%>
        <% else %>
          <%= select_tag(:option, options_for_select([["店舗", "1"],["商品","2"]]))%>
        <% end %>
        <%= select_tag(:choice, options_for_select([["完全一致検索", "1" ],["部分一致検索", "2" ]])) %>
        <%= f.submit '検索', name: nil %>
      </td>
    </tr>
  </table>
<% end %>
