<h1>トップページ</h1>
<ul class="bxslider">
  <% @products.each do |product| %>
      <li>
        <%= link_to product_path(product) do %>
          <% if product.image %>
             <%= attachment_image_tag product, :image, :fill, 150, 150, format: 'jpeg' %>
          <% else %>
            <%= image_tag 'no_image.png' %>
          <% end %>
          <h4><%= product.product_name %></h4>
        <% end %>
      </li>
  <% end %>
</ul>

